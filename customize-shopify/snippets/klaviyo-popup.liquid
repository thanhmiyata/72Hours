<script>
function closePopup() {
  document.getElementById('klaviyo-popup').style.display='none';
  sessionStorage.setItem('klaviyo_popup_closed', '1');
}

setTimeout(function(){
  if(!sessionStorage.getItem('klaviyo_popup_closed')){
    document.getElementById('klaviyo-popup').style.display='block';
    
    document.getElementById('close-btn').onclick = function() {
      closePopup();
    };
    
    document.getElementById('klaviyo-popup').onclick = function(e) {
      if(e.target === this) {
        closePopup();
      }
    };
  }
}, 3000);
</script>
